{
  "name": "Chiquitita",
  "scopeName": "source.chiquitita",
  "fileTypes": ["chiq"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.chiquitita",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.chiquitita",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.chiquitita",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.expression.chiquitita",
              "begin": "\\{\\{",
              "end": "\\}\\}",
              "patterns": [
                {
                  "include": "#numbers"
                },
                {
                  "include": "#operators"
                },
                {
                  "name": "variable.other.chiquitita",
                  "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
              ]
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.chiquitita",
          "match": "\\b(if|elsif|else|while|foreach|in|chiquitita)\\b"
        },
        {
          "name": "keyword.other.chiquitita",
          "match": "\\b(print)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.chiquitita",
          "match": "\\b(int|text|float|bool|void)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.chiquitita",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.chiquitita",
          "match": "\\bx[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.chiquitita",
          "match": "\\bb[01]+\\b"
        },
        {
          "name": "constant.numeric.octal.chiquitita",
          "match": "\\bo[0-7]+\\b"
        },
        {
          "name": "constant.numeric.float.chiquitita",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.chiquitita",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.chiquitita",
          "match": "\\b(and|or|xor|mod|equals)\\b"
        },
        {
          "name": "keyword.operator.comparison.chiquitita",
          "match": "(>=|<=|>|<)"
        },
        {
          "name": "keyword.operator.arithmetic.chiquitita",
          "match": "(\\+|\\-|\\*|\\/)"
        },
        {
          "name": "keyword.operator.assignment.chiquitita",
          "match": "="
        },
        {
          "name": "keyword.operator.concatenation.chiquitita",
          "match": "\\."
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.chiquitita",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    }
  }
}
